<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<p id="notice"></p>

<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">

<%= render 'users/userlist' %>

<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <p>Title</p>
      <%= f.text_field :title %>
    <p>Opinion</p>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  <% end %>
  
<h1>Books</h1>
  <% @books.each do |book| %>
<div>
  <%= image_tag book.get_profile_image(100, 100) %>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>

  </div>
 </div>
</div>