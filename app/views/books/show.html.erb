<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <p>Name：<%= @user.name %></p>
  <p>Introduction：<%= @user.introduction %></p>
  <% if @user.id == current_user.id %>
    <p><%= link_to "歯車ボタン", edit_user_path(@user) %></p>
  <% end %>
</div>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Book detail</h1>
<div>
  <%= image_tag @book.get_profile_image(100, 100) %>
  <%= link_to user_path(current_user.id) do %>
  <%= @book.user.name %>
  <% end %><!-- 後でuserページ(マイページ)に遷移するリンクを付ける-->
  <p><%= link_to @book.title %></p><!--Book detailに遷移するリンクを付ける-->
  <p><%= @book.body %></p>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>
