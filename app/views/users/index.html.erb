<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <p>Name：<%= @user.name %></p>
  <p>Introduction：<%= @user.introduction %></p>
  <% if @user.id == current_user.id %>
    <p><%= link_to "歯車ボタン", edit_user_path(@user) %></p>
  <% end %>
</div>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
<h1>Users</h1>
  <% @books.each do |book| %>
<div>
  <p>Image : <%= image_tag book.get_profile_image(100, 100) %></p>
  <p>Name：<%= book.user.name %></p>
  <%= link_to "Show", user_path(current_user.id) %>
</div>
<% end %>
