

<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      
  <% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
      
  <%= form_with model: @user, method: :patch do |f| %>
  
  <p>Name</p>
  <%= f.text_field :name, autofocus: true, id:"inputName" %>
  
  <p>Image</p>
  <%= f.file_field :profile_image, accept: "image/*" %>
  
  <p>Introduction</p>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>
  
  <p><%= f.submit "Update User", class: "btn btn-secondary" %></p>
<% end %>
    </div>
  </div>
</div>
