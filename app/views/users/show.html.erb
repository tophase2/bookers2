<p id="notice"></p>

<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
      
  <h2>User info</h2>

  <%= image_tag @user.get_profile_image(100, 100) %>
  <table class="table">
  <p>Name：<%= @user.name %></p>
  <p>Introduction：<%= @user.introduction %></p>
  </table>
  
  <div class="row">
  <% if @user.id == current_user.id %>
    <%= link_to edit_user_path(@user), class: "btn btn-block btn-outline-secondary" do %>
     <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
  </div>

<%= render 'books/booklist' %>

</div>

<div class="col-md-8 offset-md-1">

<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <%= image_tag book.get_profile_image(100, 100) %>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>

   
  </div>
 </div>
</div>