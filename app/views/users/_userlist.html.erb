
      
  <h2>User info</h2>

  <%= image_tag @user.get_profile_image(100, 100) %>
  <table class="table">
  <p>Name：<%= @user.name %></p>
  <p>Introduction：<%= @user.introduction %></p>
  </table>
  
  <div class="row">
  <% if @user.id == current_user.id %>
    <%= link_to edit_user_path(@user), class: "btn btn-block btn-outline-secondary" do %>
     <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
  </div>
 